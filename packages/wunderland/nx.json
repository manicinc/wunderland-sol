{
  "extends": "nx/presets/npm.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test", "lint", "typecheck", "doc", "docs"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/.next", "{projectRoot}/out"]
    },
    "test": {
      "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.js"],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json", "{workspaceRoot}/.eslintrc.js"],
      "cache": true
    },
    "typecheck": {
      "cache": true
    },
    "doc": {
      "cache": true,
      "outputs": ["{projectRoot}/docs", "{projectRoot}/public/docs"]
    },
    "docs": {
      "cache": true,
      "outputs": ["{projectRoot}/docs", "{projectRoot}/public/docs"]
    }
  },
  "affected": {
    "defaultBase": "master"
  }
}
