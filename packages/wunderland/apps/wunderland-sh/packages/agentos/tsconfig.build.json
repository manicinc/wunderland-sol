{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "noEmitOnError": true
  },
  "include": [
    "src/index.ts",
    "src/skills.ts",
    "src/api/**/*.ts",
    "src/config/**/*.ts",
    "src/config/**/*.json",
    "src/core/**/*.ts",
    "src/cognitive_substrate/**/*.ts",
    "src/cognitive_substrate/**/*.json",
    "src/extensions/**/*.ts",
    "src/skills/**/*.ts",
    "src/rag/**/*.ts",
    "src/logging/**/*.ts",
    "src/services/**/*.ts",
    "src/utils/**/*.ts",
    "src/types/**/*.ts",
    "src/stubs/**/*.ts",
    "src/channels/**/*.ts",
    "src/voice/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "src/memory_lifecycle/**/*",
    "src/rag/tests/**/*",
    "src/server/**/*",
    "src/server_integration/**/*",
    "src/server_utils/**/*",
    "src/examples/**/*",
    "src/tests/**/*",
    "src/cognitive_substrate/tests/**/*",
    "src/core/ai_utilities/tests/**/*",
    "src/core/audio/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}
