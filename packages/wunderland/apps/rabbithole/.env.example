# ============================================================
# RabbitHole (Next.js) — Environment Variables
# ============================================================
# Copy to .env and fill in your values.
# ============================================================

# Admin password for global auth
ADMIN_PASSWORD=

# Auth.js / NextAuth secret (generate: openssl rand -base64 32)
AUTH_SECRET=

# JWT secret for verifying custom auth tokens (credits, etc.)
# Must match the backend JWT_SECRET if sharing tokens.
JWT_SECRET=
AUTH_TRUST_HOST=true

# Auth.js canonical URL (must match your production domain)
# Default to production domain; override locally in .env.local if needed.
AUTH_URL=https://rabbithole.inc

# Google OAuth (optional — set NEXT_PUBLIC_OAUTH_GOOGLE=true to show button)
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
NEXT_PUBLIC_OAUTH_GOOGLE=true

# GitHub OAuth (optional — set NEXT_PUBLIC_OAUTH_GITHUB=true to show button)
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=
NEXT_PUBLIC_OAUTH_GITHUB=true

# ============================================================
# Stripe Billing (optional — leave blank to disable)
# ============================================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_STARTER_PRICE_ID=
STRIPE_PRO_PRICE_ID=

# Shared secret for Stripe webhooks → backend sync
# INTERNAL_API_SECRET=

# ============================================================
# Channel OAuth / Integrations (backend + frontend callback bridge)
# ============================================================
SLACK_OAUTH_CLIENT_ID=
SLACK_OAUTH_CLIENT_SECRET=
DISCORD_OAUTH_CLIENT_ID=
DISCORD_OAUTH_CLIENT_SECRET=
DISCORD_OAUTH_BOT_TOKEN=
OAUTH_CALLBACK_BASE_URL=http://localhost:3010

# Branding links used in transactional emails and checkout redirects
RABBITHOLE_SITE_URL=https://rabbithole.inc
WUNDERLAND_SITE_URL=https://wunderland.sh

# ============================================================
# Email (Resend) — transactional emails
# ============================================================
RESEND_API_KEY=
EMAIL_FROM="Rabbit Hole <noreply@yourdomain.com>"
EMAIL_SUPPORT=hi@yourdomain.com

# ============================================================
# LLM PROVIDERS (Platform-managed — premium users get included credits)
# ============================================================
OPENAI_API_KEY=
# Agent builder (voice/text → structured config extraction)
AGENT_BUILDER_MODEL=gpt-5.2
ANTHROPIC_API_KEY=
OPENROUTER_API_KEY=

# OLLAMA (Local LLM — free, self-hosted)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_ENABLED=false
OLLAMA_MODEL=dolphin-llama3:8b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ============================================================
# AGENT TOOL API KEYS
# ============================================================

# Serper — Google search API for agents
SERPER_API_KEY=

# NewsAPI — news articles, startup monitoring
NEWSAPI_API_KEY=

# Giphy — GIF/meme integration for agents
GIPHY_API_KEY=

# ElevenLabs — TTS/STT voice synthesis
ELEVENLABS_API_KEY=

# Twilio — SMS / voice channel integration
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# GitHub token for agent tools
GITHUB_TOKEN=

# ============================================================
# MEDIA / IMAGE APIS
# ============================================================
PEXELS_API_KEY=
PIXABAY_API_KEY=
UNSPLASH_ACCESS_KEY=

# ============================================================
# PROXY (optional — for web scraping)
# ============================================================
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=
PROXY_URL=

# ============================================================
# Backend API Connection
# ============================================================
# Dev: http://localhost:3001/api  Prod: /api (via nginx)
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Internal API bridge URL for server-side calls
INTERNAL_API_URL=http://localhost:3001/api

# Live stats merge sources (comma-separated base URLs, e.g. https://wunderland.sh,https://sol.wunderland.sh)
WUNDERLAND_API_URLS=https://wunderland.sh
# Merge mode for homepage stats: append (sum) or max
WUNDERLAND_STATS_MERGE_MODE=append

# Blockchain proof verification (disable for standard deployments)
NEXT_PUBLIC_WUNDERLAND_ENABLE_CHAIN_PROOFS=false

# ============================================================
# Analytics (loaded only when user consents to analytics cookies)
# ============================================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_CLARITY_ID=

# ============================================================
# X / Twitter API (optional — for social posting)
# ============================================================
X_BEARER_TOKEN=
X_CONSUMER_KEY=
X_CONSUMER_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_TOKEN_SECRET=
X_CLIENT_ID=
X_CLIENT_SECRET=

# ============================================================
# VA Admin System
# ============================================================
VA_ADMIN_CSV_PATH=../../backend/config/va-admins.csv
