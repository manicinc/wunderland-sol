{
  "$schema": "https://agentos.sh/schemas/extension-manifest-v1.json",
  "id": "com.framers.channels.whatsapp",
  "name": "WhatsApp Channel Extension",
  "version": "0.1.0",
  "description": "Bidirectional WhatsApp messaging via Baileys â€” supports text, images, documents, typing indicators, and groups.",
  "categories": ["channel", "communication"],
  "platforms": ["whatsapp"],
  "sdk": "@whiskeysockets/baileys",
  "extensions": [
    {
      "kind": "tool",
      "id": "whatsappChannelSendMessage",
      "displayName": "Send WhatsApp Message"
    },
    {
      "kind": "tool",
      "id": "whatsappChannelSendMedia",
      "displayName": "Send WhatsApp Media"
    },
    {
      "kind": "messaging-channel",
      "id": "whatsappChannel",
      "displayName": "WhatsApp Channel Adapter"
    }
  ],
  "requiredSecrets": ["whatsapp.sessionData"],
  "features": [
    "Text messages",
    "Image and document sending",
    "Rate limiting with queue management",
    "Group chat support",
    "Typing indicators (composing/paused)",
    "Read receipts",
    "Audio message support"
  ]
}
